
<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3">Your Pragmatic Cart</h2>
  
  <ul class="list-disc list-inside">
    <% cart.line_items.each do |item| %>
      <li class="flex items-center justify-between w-full space-x-4">
        <!-- Book Title -->
        <span><%= item.product.title %></span>

        <!-- Action Links -->
        <div class="flex space-x-5 mb-3">
          <%= link_to "Show", cart, class: "text-center rounded-md px-2.5 py-1.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          <%= link_to "Edit", edit_cart_path(cart), class: "text-center rounded-md px-2.5 py-1.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          <%= button_to "Destroy", cart, method: :delete, class: "rounded-md px-2.5 py-1.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
        </div>
      </li>
    <% end %>
  </ul>
  
</div>
